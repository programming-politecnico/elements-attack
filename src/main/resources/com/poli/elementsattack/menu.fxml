<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.poli.elementsattack.MenuController" style="-fx-background-color: #272727">
    <Text style="-fx-font-size: 24px;-fx-font-weight: bold" fill="orangered" text="Elements Attack"/>

    <Button text="Jugar!" onAction="#startGameHandler"
            style="-fx-background-color: #272727;-fx-text-fill: orangered;-fx-font-size: 12px;-fx-font-weight: bold;-fx-border-color: orangered;-fx-border-width: 2px;-fx-border-radius: 10px;-fx-background-radius: 10px;-fx-padding: 4px 12px;-fx-cursor: hand"/>
</VBox>
