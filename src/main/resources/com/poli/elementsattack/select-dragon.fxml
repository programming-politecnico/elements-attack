<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.poli.elementsattack.SelectDragonController" prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: #272727" alignment="CENTER">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Text text="Elige un Dragon" fill="white" style="-fx-font-size: 16px;-fx-font-weight: bold"/>
    <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
        <Button fx:id="fireButton" text="Fuego"/>
        <Button fx:id="iceButton" text="Hielo"/>
        <Button fx:id="waterButton" text="Agua"/>
        <Button fx:id="earthButton" text="Tierra"/>
        <Button fx:id="windButton" text="Viento"/>
    </HBox>
</VBox>
